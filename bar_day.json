{
  "width": 1600,
  "height": 900,
  "padding": {"top": 10, "left": 100, "bottom": 30, "right": 10},
  "data": [
    {
      "name": "table",
       "url": "data/activity_day.json",
       "format": {
          "type":"json",
          "parse":{
          }
        }
      }
  ],
  "scales": [
    {
      "name": "x",
      "type": "ordinal",
      "range": "width",
      "domain": {"data": "table", "field": "dates"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "domain": {"data": "table", "field": "nombres"},
      "nice": true
    }
  ],
  "axes": [
    {"type": "x", "scale": "x",
       "labels": {
         "text": {"value": "TEST"},
         "fill": {"value": "steelblue"},
         "angle": {"value": 50},
         "fontSize": {"value": 54},
         "align": {"value": "left"},
         "baseline": {"value": "middle"},
         "dx": {"value": 3}
       }
     },
    {"type": "y", "scale": "y"}
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "table"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "dates"},
          "width": {"scale": "x", "band": true, "offset": -1},
          "y": {"scale": "y", "field": "nombres"},
          "y2": {"scale": "y", "value": 0}
        },

        "update": {
          "fill": {"value": "steelblue"}
        },
        "hover": {
          "fill": {"value": "red"}
        }
      }
    }
  ]
}